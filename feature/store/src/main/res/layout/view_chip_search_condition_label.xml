<com.google.android.material.chip.Chip xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chip"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:textAppearance="@style/TextAppearance.App.Caption.Sp"
    app:chipBackgroundColor="?attr/colorPrimary"
    app:chipCornerRadius="3dp"
    app:chipMinTouchTargetSize="0dp"
    app:chipStrokeColor="@color/gray_e5e5e5"
    app:chipStrokeWidth="1dp"
    app:closeIcon="@drawable/ic_chips_close_gray_12dp"
    app:closeIconEnabled="true"
    app:closeIconSize="12dp"
    app:rippleColor="?attr/colorRipplePrimary" />
